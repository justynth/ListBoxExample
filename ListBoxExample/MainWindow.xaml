<Window x:Class="ListBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBoxExample"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="MainWindow" Height="540" Width="800">
    <Grid>
        <Label x:Name="Client_Label" Content="Clients" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <ListBox x:Name ="Client_ListBox" HorizontalAlignment="Left" Height="140" Margin="20,40,0,0" VerticalAlignment="Top" Width="200" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="Client_ListBox_SelectionChanged" SelectionMode="Single">
            <ListBoxItem Content="Bank 1"></ListBoxItem>
            <ListBoxItem Content="Bank 2"></ListBoxItem>
            <ListBoxItem Content="Bank 3"></ListBoxItem>
            <ListBoxItem Content="Bank 4"></ListBoxItem>
            <ListBoxItem Content="Bank 5"></ListBoxItem>
            <ListBoxItem Content="Bank 6"></ListBoxItem>
            <ListBoxItem Content="Bank 7"></ListBoxItem>
            <ListBoxItem Content="Bank 8"></ListBoxItem>
        </ListBox>
        <Label x:Name="Reports_Label" Content="Reports" HorizontalAlignment="Left" Margin="20,200,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <ListBox x:Name="Reports_ListBox" HorizontalAlignment="Left" Height="180" Margin="20,230,0,0" VerticalAlignment="Top" Width="200" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Single"/>
        <TextBox x:Name="Search_TextBox" HorizontalAlignment="Left" Height="40" Margin="20,370,0,30" VerticalAlignment="Bottom" Width="125" FontFamily="Cambria" FontSize="15" VerticalContentAlignment="Center"></TextBox>
        <Button x:Name="Search_Button" HorizontalAlignment="Left" Height="40" Margin="155,370,0,30" VerticalAlignment="Bottom" Width="65" Content="Search" FontFamily="Cambria" Click="Search_Button_Click"/>
    </Grid>
</Window>
