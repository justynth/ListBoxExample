<Window x:Class="ListBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBoxExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Client_Label" Content="Clients" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <ListBox x:Name ="Client_ListBox" HorizontalAlignment="Left" Height="140" Margin="20,40,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="Reports_Label" Content="Reports" HorizontalAlignment="Left" Margin="20,200,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <ListBox x:Name="Reports_ListBox" HorizontalAlignment="Left" Height="140" Margin="20,230,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
